\cf3 Server\cf0 .default = \cf3 Server\cf0 .internal;\
s = \cf3 Server\cf0 .default.boot;\
\
\cf2 // Define a new corpus with a path and a server: the path will help determine file names later on.\cf0 \
\cf2 // Each corpus ideally has its own directory. Each corpus directory should have a 'snd' subfolder.\cf0 \
~mycorpus = \cf3 CorpusDB\cf0 .new(\cf4 "/Users/me/folder/where/the/corpus/is/to/be/stored"\cf0 , s);\
\
\cf2 // A variable that holds a path to some sound file:\cf0 \
~soundfile = \cf4 "/some/path/to/a/soundfile.aif"\cf0 \
\cf2 //ideally:\cf0 \
~soundfile = \cf4 "/Users/me/folder/where/the/corpus/is/to/be/stored/snd/soundfile.aif"\cf0 \
\cf2 // but the sound files can live anywhere on your drive.\cf0 \
\
\cf2 // Add the sound file to the corpus database.\cf0 \
~mycorpus.addSoundfile(~soundfile);\
\cf2 // (the corresponding remove method)\cf0 \
~mycorpus.removeSoundfile(~soundfile);\
\
\cf2 // Perform the analysis. (note: for extremely long files (> 2-3 minutes) SC might hang and show the 'spinning wheel of death'...it should not hang for too long...if you have to force-quit, please do complain to the author!)\cf0 \
~mycorpus.analyzeSoundFile(~soundfile);\
\
\cf2 // Add a unit (a SoundFile Unit or 'a unit relative to a sound file')\cf0 \
\cf2 // args: the path, an integer id/index (relative to that file),\cf0 \
\cf2 //      and the bounds (in milliseconds) of this new unit\cf0 \
~mycorpus.addSoundFileUnit(~soundfile, 0, [0, 1000]);\
\
\cf2 // Given at least one unit that has been established by .addSoundFileUnit, this function segments the metadata and stores it in the right places.\cf0 \
~mycorpus.segmentUnits(~soundfile);\
\cf2 // Note that this has to be called for every sound file that is to be segmented into units.\cf0 \
\
\cf2 // Get the metadata for one unit by supplying the sound file id and the (sound-file-)relative id.\cf0 \
\cf2 // (Internally, this actually creates a corpus unit table where the units are indexed by corpus-level\cf0 \
\cf2 // indexes and searches that.)\cf0 \
~mycorpus.getSoundFileUnitMetadata(0,1);\
\cf2 // Get the meta data for one unit by supplying the corpus id (also creates/uses the (same) corpus unit table).\cf0 \
~mycorpus.getCorpusUnitMetadata(6);\
\
\
\cf2 // import and export ...\cf0 \
~mycorpus.importCorpusFromXML(\cf4 "/some/file/path.xml"\cf0 );\
~mycorpus.exportCorpusToXML(\cf4 "/some/file/path.xml"\cf0 );}